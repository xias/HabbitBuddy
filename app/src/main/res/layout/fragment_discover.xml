<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.effectivenavigation.summary.BuddyCenterFragment"
    android:orientation="vertical"
    >



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="5">

                <TextView
                    android:text="Your habit moment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hiUser"
                    android:layout_gravity="center"
                    android:textColor="#4A71A5"
                    android:textStyle="normal|bold"
                    android:layout_margin="2dp"
                    android:gravity="right"
                    android:layout_weight="3"
                    android:textSize="16sp" />



                <ImageButton
                    android:src="@drawable/add_icon"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"

                    android:id="@+id/addEntryButton"
                    android:layout_weight="1"
                    android:background="@null"/>

            </LinearLayout>



    <ListView
        android:transcriptMode="alwaysScroll"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="45"
        android:background="@null"


        android:padding="10dp"
        android:id="@+id/wallList" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center">

        <TextView
            android:text="Why not match a buddy?"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:textColor="#4A71A5"
            android:textStyle="normal|bold"
            android:id="@+id/buddyTitle"
            android:textSize="16sp" />



    </LinearLayout>

    <ListView
        android:transcriptMode="alwaysScroll"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="45"
        android:background="@null"


        android:padding="10dp"
        android:id="@+id/wallListBuddy" />




</LinearLayout>
