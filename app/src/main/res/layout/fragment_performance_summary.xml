<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.effectivenavigation.summary.PerformanceSummaryFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:text="Performance Summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="30sp"
        android:textAlignment="center"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="5dp" />

    <LinearLayout
        android:gravity="center"

        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <Button
            android:text="Change Frequency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/change_frequency_button"
            android:layout_weight="33"
            android:layout_margin="10dp"

            />

        <Button
            android:text="Add a new habit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:id="@+id/addnew_button"
            android:layout_margin="10dp"

/>

        <Button
            android:text="Log out"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:id="@+id/logout_button"
            android:layout_margin="10dp"
           />
    </LinearLayout>

</LinearLayout>
